generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id                    Int      @id @default(autoincrement())
  company_code          String?  @unique
  company_name          String
  status                String
  owner_name            String?
  ownership_type        String?
  establishment_year    Int?
  industry              String
  business_category     String[]
  company_type          String?
  company_website       String?
  company_logo_url String?
  primary_contact_no    String?
  alternate_contact_no  String?
  primary_email         String
  alternate_email       String?
  gst_no                String?
  pan_no                String?
  trn_no                String?
  tan_no                String?

  headOffice       HeadOffice?
  kyc_verification KYCVerification?
  reference        Reference[]

  offices      Office[]
  bank_details BankDetail[]
  billingDocs  BillingDocument[]

  enableBilling String? @default("No")
  userAccess    String? @default("No")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([company_code])
}

model KYCVerification {
  id                   Int     @id @default(autoincrement())
  gst_certificate_file String?
  gst_remark           String?
  gst_verified         String? @default("No")

  pan_card_file     String?
  pan_card_remark   String?
  pan_card_verified String? @default("No")

  declaration_194q_file     String?
  declaration_194q_remark   String?
  declaration_194q_verified String? @default("No")

  authority_letter_file     String?
  authority_letter_remark   String?
  authority_letter_verified String? @default("No")
  company                   Company @relation(fields: [companyId], references: [id])
  companyId                 Int     @unique
}

model HeadOffice {
  id             Int     @id @default(autoincrement())
  officeName     String?
  office_gst     String?
  contact_person String?
  email          String?
  phone          String?
  country        String?
  state          String?
  city           String?
  pincode        Int?
  location       String?

  company   Company @relation(fields: [companyId], references: [id])
  companyId Int     @unique
}

model Office {
  id             Int     @id @default(autoincrement())
  officeType     String?
  officeName     String?
  office_gst     String?
  contact_person String?
  email          String?
  phone          String?
  country        String?
  state          String?
  city           String?
  pincode        Int?
  location       String?
  companyId      Int
  company        Company @relation(fields: [companyId], references: [id])
}

model BankDetail {
  id                  Int      @id @default(autoincrement())
  account_number      BigInt?
  account_type         String?
  account_holder_name String?
  bank_name           String?
  ifsc_code           String?
  primary             Boolean?
  companyId           Int
  company             Company  @relation(fields: [companyId], references: [id])
}

model Reference {
  id           Int     @id @default(autoincrement())
  person_name  String?
  designation  String?
  company_name String?
  email        String?
  phone        String?
  companyId    Int
  company      Company @relation(fields: [companyId], references: [id])
}

model BillingDocument {
  id        Int     @id @default(autoincrement())
  doc_name  String?
  doc_file  String
  companyId Int
  company   Company @relation(fields: [companyId], references: [id])
}
